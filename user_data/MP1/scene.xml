<mujoco model="piper_scene">
  <include file="../../assets/thorlabs_breadboard/breadboard.xml"/>
  <include file="../../assets/agilex_piper/piper.xml"/>

  <statistic center="0 0 0.1" extent="0.4"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <!-- YCB object assets -->
    <!-- banana -->
    <!-- Visual -->
    <texture name="banana_texture" type="2d" file="../../assets/ycb_objects/011_banana/google_16k/texture_map.png"/>
    <material name="banana_material" texture="banana_texture"/>
    <mesh name="banana_visual_mesh" file="../../assets/ycb_objects/011_banana/google_16k/textured.obj"/>
    <!-- Collision -->
    <mesh name="banana_collision_mesh" file="../../assets/ycb_objects/011_banana/google_16k/textured_vhacd.stl"/>

    <!-- orange -->
    <!-- Visual -->
    <texture name="orange_texture" type="2d" file="../../assets/ycb_objects/017_orange/google_16k/texture_map.png"/>
    <material name="orange_material" texture="orange_texture"/>
    <mesh name="orange_visual_mesh" file="../../assets/ycb_objects/017_orange/google_16k/textured.obj"/>
    <!-- Collision -->
    <mesh name="orange_collision_mesh" file="../../assets/ycb_objects/017_orange/google_16k/textured_vhacd.stl"/>

    <!-- orange -->
    <!-- Visual -->
    <texture name="strawberry_texture" type="2d" file="../../assets/ycb_objects/012_strawberry/google_16k/texture_map.png"/>
    <material name="strawberry_material" texture="strawberry_texture"/>
    <mesh name="strawberry_visual_mesh" file="../../assets/ycb_objects/012_strawberry/google_16k/textured.obj"/>
    <!-- Collision -->
    <mesh name="strawberry_collision_mesh" file="../../assets/ycb_objects/012_strawberry/google_16k/textured_vhacd.stl"/>

  </asset>
  
  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- ======= YCB OBJECT ======= -->
    <!-- ======= Banana Object ======= -->
    <body name="banana" pos="0.2 0 0.04175" quat="1 0 0 0">
      <joint name="banana_joint" type="free"/>
      <inertial pos="0 0 0" mass="0.179594" diaginertia="8.80012e-05 8.80012e-05 8.80012e-05" />

      <!-- Collision geometry -->
      <geom name="banana_collision" type="mesh" mesh="banana_collision_mesh"
            density="1000" condim="4" friction="1 0.5 0.01"
            margin="0.003" group="2" solref="-6000 -300" />

      <!-- Visual geometry -->
      <geom name="banana_visual" type="mesh" mesh="banana_visual_mesh"
            material="banana_material" conaffinity="0" contype="0" group="1" />
    </body>

    <!-- ======= Orange Object ======= -->
    <body name="orange" pos="0.6 0 0.04175" quat="1 0 0 0">
      <joint name="orange_joint" type="free"/>
      <inertial pos="0 0 0" mass="0.179594" diaginertia="8.80012e-05 8.80012e-05 8.80012e-05" />

      <!-- Collision geometry -->
      <geom name="orange_collision" type="mesh" mesh="orange_collision_mesh"
            density="1000" condim="4" friction="1 0.5 0.01"
            margin="0.003" group="2" solref="-6000 -300" />

      <!-- Visual geometry -->
      <geom name="orange_visual" type="mesh" mesh="orange_visual_mesh"
            material="orange_material" conaffinity="0" contype="0" group="1" />
    </body>

    <!-- ======= Strawberry Object ======= -->
    <body name="strawberry" pos="0.4 0.2 0.04175" quat="1 0 0 0">
      <joint name="strawberry_joint" type="free"/>
      <inertial pos="0 0 0" mass="0.179594" diaginertia="8.80012e-05 8.80012e-05 8.80012e-05" />

      <!-- Collision geometry -->
      <geom name="strawberry_collision" type="mesh" mesh="strawberry_collision_mesh"
            density="1000" condim="4" friction="1 0.5 0.01"
            margin="0.003" group="2" solref="-6000 -300" />

      <!-- Visual geometry -->
      <geom name="strawberry_visual" type="mesh" mesh="strawberry_visual_mesh"
            material="strawberry_material" conaffinity="0" contype="0" group="1" />
    </body>

    <!-- fixed tripod camera -->
    <camera name="top_cam" pos="0.2 0.0 0.45" euler="0 0 0" fovy="90"/>
    <camera name="side_cam_right" pos="0.3 -0.6 0.75" euler="45 0 0" fovy="70"/>
    <camera name="side_cam_left" pos="0.4 0.6 0.75" euler="-45 0 180" fovy="70"/>

  </worldbody>
  
</mujoco>
